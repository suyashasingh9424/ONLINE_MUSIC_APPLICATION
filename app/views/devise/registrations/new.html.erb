<!DOCTYPE html>
<html lang="en">

<head>
  <title>Sign Up</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
 
  <!-- Bootstrap 4 CDN link -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

  <style>
    body {
      background-color: #ffdab9 !important;
    }

    .signup-container {
      max-width: 400px;
      margin: auto;
      padding: 20px;
      background-color:  #343a40; 
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-top: 50px;
    }

    .signup-container h2 {
      color: #ffffff;
    }

    .signup-container .field label,
    .signup-container .actions {
      margin-top: 10px;
    }

    .signup-container .actions input {
      background-color: #28a745; 
      border: none;
    }

    .signup-container .actions input:hover {
      background-color: #218838;
    }
  </style>
</head>

<body>

  <div class="signup-container">
    <h2>Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: 'text-light' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'text-light' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'text-light' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: 'btn btn-success' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
</body>

</html>
