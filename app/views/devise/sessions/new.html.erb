<!DOCTYPE html>
<html lang="en">

<head>
  <title>Login</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
 
  <!-- Updated Bootstrap 4 CDN link -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

  <style>
    body {
      background-color: #ffdab9 !important;
    }

    .login-container {
      max-width: 400px;
      margin: auto;
      padding: 20px;
      background-color:  #343a40; 
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-top: 50px;
    }

    .login-container h2 {
      color: #ffffff;
    }

    .login-container .field label,
    .login-container .actions {
      margin-top: 10px;
    }

    .login-container .actions input {
      background-color: #007bff; 
      border: none;
    }

    .login-container .actions input:hover {
      background-color: #0056b3;
    }
  </style>
</head>

<body>

  <div class="login-container">
    <h2>Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'text-light' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'text-light' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'text-light' %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</body>

</html>
